<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0" client="site" method="upgrade">
    <name>mod_fractalsidebar</name>
    <author>Tomasz Kuczak</author>
    <version>1.0.0</version>
    <description>MOD_FRACTALSIDEBAR_XML_DESCRIPTION</description>
    <files>
        <filename>mod_fractalsidebar.xml</filename>
        <filename module="mod_fractalsidebar">mod_fractalsidebar.php</filename>
        <filename>index.html</filename>
       	<folder>tmpl</folder>
        <folder>language</folder>
    </files>
    <languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_fractalsidebar.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_fractalsidebar.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
					<field name="cookie-issue-info" type="radio" default="0" label="MOD_FSIDEBAR_COOKIE_RADIO" description="MOD_FSIDEBAR_COOKIE_RADIO_DESC">
						<option value="1">Yes</option>
						<option value="">No</option>
					</field>
			</fieldset>
		</fields>
	</config>
</extension>
